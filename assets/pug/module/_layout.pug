//- レイアウト組用テンプレート

doctype html

block vars
- var page = site.pages[pageid]

include _dammy_images
include _mixins

html(lang='ja')
  head
    meta(charset = 'utf-8')
    meta(http-equiv = 'X-UA-Compatible', content = 'IE = edge, chrome = 1')
    meta(name = 'viewport', content = 'width = device-width, initial-scale = 1')
    +metabase
    +metaog
    - if( pageid === 'index' )
      title= site.name
    - else
      title= site.name + ':' + page.title
    +csss(site.common_css.concat(page.css))
    +scripts(site.common_script.concat(page.script))
  body( id = 'page_' + pageid )
    .allcontents
      include _header
      - if( pageid === 'index' )
        block topslider
        include _nav
      - else
        include _nav
      main.main.container-fluid( id = pageid )
        div.widthFit
          block contents
      footer.footer
        div.widthFit
          include _footer