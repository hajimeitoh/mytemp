@import 'nib'
@import 'module/_base'
@import 'module/_reset'

/* common */
.widthFit
  max-width $maxWidth
  width 100%
  margin 0 auto
  overflow hidden

h1, h2, h3, a
  font-size inherit

a
  color $linkcolor_light
  &:hover
    color darken(@color, 20%)
html, body
  padding 0
  margin 0
  font-family 'Noto Sans JP', sans-serif
  font-size $textSize
  min-height 100vh
  background-color $outbgcolor

.main.container-fluid
  margin-top 15px
  @media only screen and (max-width: 767px)
    margin-top 0
    padding 0

/* footer */
.footer
  position absolute
  bottom 0
  width 100%
  box-sizing border-box
  background-color $navbgcolor
  color #fff
  padding 10px
  text-align right
  font-size 1.2rem
  margin-top 15px
  @media only screen and (max-width: 767px)
    margin-top 0
    text-align center
  small
    font-size 1.2rem

/* sidemenu */
.section-side
  margin 0 10px 10px
  border-radius 5px
  text-align center
  border 1px solid  #2d5663
  a:not(.btn)
    color #2d5663
  .head
    font-size 1.6rem
    line-height 2.8rem
    padding 0 5px
    background-color #2d5663
    color #ffffff
  .detail
    padding 0
    margin 16px 8px 8px
    dt
      display none
    dd
      color: #2d5663;
      font-size: 2.4rem;
