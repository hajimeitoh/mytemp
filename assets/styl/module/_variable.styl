/*
 * grid, breakpoint
 */
// コンテンツの差最大幅
$maxWidth = 900px;
// SPの幅
$screen-sm = 768px;
breakpoint(bpName)
  for name in bpName
    if name == 'sm'
      @media only screen and (max-width: ( $screen-sm - 1 ) px )
        {block}
    if name == 'md'
      @media only screen and (max-width: ( $maxWidth - 1 ) px )
        {block}

/*
 * font
 */
$textSize = 10px;